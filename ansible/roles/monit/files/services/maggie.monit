check process maggie with pidfile /var/run/maggie.pid
  start program = "/usr/bin/systemctl restart maggie" with timeout 60 seconds
  restart program = "/usr/bin/systemctl restart maggie" with timeout 60 seconds
  stop program = "/usr/bin/systemctl stop maggie"

  if totalmem > 7% for 5 cycles then restart   # eating up memory?
  if totalcpu > 12% for 5 cycles then restart # hung process?

  group ct-daemon
  group metrics
