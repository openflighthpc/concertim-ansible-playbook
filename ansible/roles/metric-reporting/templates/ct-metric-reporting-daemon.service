[Unit]
Description=Concertim Metric Reporting Daemon - Provides HTTP API to allow injecting custom metrics into the metric stream.

[Service]
Type=exec
ExecStart={{ct_installation_dir}}/ct-metric-reporting-daemon/ct-metric-reporting-daemon
TimeoutSec=10sec
StandardOutput=append:/var/log/ct-metric-reporting-daemon.log
StandardError=append:/var/log/ct-metric-reporting-daemon.log

[Install]
WantedBy=multi-user.target
